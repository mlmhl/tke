{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "rootDir": "src",
    "outDir": "external/lib",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["**/__tests__/*.ts", "**/__tests__/*.tsx"],
  "compileOnSave": false
}
