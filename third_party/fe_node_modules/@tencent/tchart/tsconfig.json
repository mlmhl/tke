{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@charts/*": ["src/charts/*"],
      "tea-components/*": [
        "src/tea-components/*"
      ],
      "panel/*": [
        "src/panel/*"
      ],
      "i18n/*": [
        "src/i18n/*"
      ]
    },
    "moduleResolution": "node",
    "jsx": "react",
    "module": "esNext",
    "outDir": "./ts-dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "noLib": false,
    "experimentalDecorators": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts"
  ],
  "compileOnSave": false
}